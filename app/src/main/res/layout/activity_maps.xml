            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_green"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fruits"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Seafood - Teal -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_teal"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seafood"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Street Food - Deep Blue -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_deep_blue"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street Food"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- ðŸŒ® Fusion / International -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_purple"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fusion / International"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- ðŸ¥˜ Traditional Malaysian -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_red_orange"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traditional Malaysian"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Coffee - Coffee Brown -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_coffee_brown"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Non-Coffee & Tea - Matcha Green -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_matcha_green"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-Coffee &amp; Tea"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Beverage - Sky Blue -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_sky_blue"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beverage"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        </LinearLayout> <!-- End of legend_content -->

    </LinearLayout> <!-- End of color_legend -->

</androidx.constraintlayout.widget.ConstraintLayout>