<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the insert data screen, using ConstraintLayout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".InsertDataActivity">

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add/Update Food Truck Data"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Food Truck Name/Type Input -->
    <EditText
        android:id="@+id/editTextFoodTruckName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Food Truck Name/Type (e.g., Mee Goreng Truck)"
        android:inputType="textCapWords"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Location Description Input -->
    <EditText
        android:id="@+id/editTextLocationDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Location Description (e.g., Near Universiti Utara Malaysia)"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextFoodTruckName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Latitude Input -->
    <EditText
        android:id="@+id/editTextLatitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Latitude (e.g., 3.1390)"
        android:inputType="numberDecimal|numberSigned"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextLocationDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Longitude Input -->
    <EditText
        android:id="@+id/editTextLongitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Longitude (e.g., 101.6869)"
        android:inputType="numberDecimal|numberSigned"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextLatitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSaveData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Food Truck Data"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextLongitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
